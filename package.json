{
  "name": "sfdx-project-visualizer",
  "author": "Constantin Schlusche, Ronny Rokitta",
	"displayName": "sfdx-project-visualizer",
	"description": "Visualizes structure and dependencies in a sfdx project",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:sfdx-project-visualizer.visualizeSfdxProject"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sfdx-project-visualizer.visualizeSfdxProject",
				"title": "Visualize Project Structure"
			}
		], "menus": {
			"explorer/context": [
				{"command": "sfdx-project-visualizer.visualizeSfdxProject", "group": "z_commands", "when": "resourceFilename == sfdx-project.json"
				}
			], 
			"editor/context": [{"command": "sfdx-project-visualizer.visualizeSfdxProject","when": "resourceFilename == sfdx-project.json"}],
			"touchBar": [{"command": "sfdx-project-visualizer.visualizeSfdxProject"}]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
